<main class="container">
    <form action="/auth/login" method="POST">
        <input id="email" name="email" type="email"  placeholder="Email" aria-label="Email" autocomplete="email" />
        <input id="password" name="password" type="password" required minlength="4" maxlength="8" placeholder="Password" aria-label="Password"/>

        <button type="submit">Login</button>
    </form>
</main>